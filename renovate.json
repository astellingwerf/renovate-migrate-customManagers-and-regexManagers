{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "customManagers:tfvarsVersions"
  ],
  "configMigration": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/).gitlab-ci.yml$"
      ],
      "matchStrings": [
        "BASE_IMAGE_.*:\\s+\"(?<depName>[^:]*):(?<currentValue>[^@\\s]*)\""
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
